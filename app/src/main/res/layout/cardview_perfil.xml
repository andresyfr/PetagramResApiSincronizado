<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvPerfil"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:src="@drawable/shock_rave_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:foregroundGravity="center_horizontal"
                android:text="@string/like"
                android:paddingEnd="10dp"
                android:textSize="@dimen/nombre_cardview" />

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:foregroundGravity="center_horizontal"
                android:text="@string/valorLike"
                android:textSize="@dimen/nombre_cardview" />

            <ImageView
                android:id="@+id/imgBone"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/like_bone"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>